
<div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
          <h3> <%= @post.title %></h3>
          <h5>by  <%= @post.author %> <%= @post.created_at.strftime("%Y-%m-%d") %></h5>
    <hr>
        <div class="panel-body ">
          <p class="content">
          <%= @post.content %>
          </p>
        </div>
    
    <%= link_to 'Delete', post_path(@post), method: :delete, class: 'btn btn-sm btn-danger', data: {confirm: "Are you sure?"} %>
    <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-sm btn-success' %> 
    
        </div>
    </div>
</div>

